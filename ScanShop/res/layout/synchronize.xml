<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    android:background="#ffffff"
    android:textColor="#000000"
    android:padding="5px">

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="#FFCC00"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:textColor="#000000" >

        <ImageView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:id="@+id/SplashImageView"
        android:layout_gravity="center"        
        android:src="@drawable/splashicon"        
        android:contentDescription="@string/pillpodIconDescribe">
        
    	</ImageView>


		<LinearLayout
            android:id="@id/synchronizeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFCC00"
        	android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/padding_left"
            android:paddingTop="@dimen/textfieldFontSize" >
        
		    <Button
                android:id="@id/synchronizeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synchronize" />
		    
		    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Click to Synchronize with database"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18px" />
		    
	    </LinearLayout>

    

    </LinearLayout>
</LinearLayout>